{
    "name": "jschreuder/middle-skeleton",
    "description": "A Middle framework setup for a new project.",
    "license": "MIT",
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "autoload": {
        "psr-4": {
            "Middle\\Skeleton\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=8.3",
        "ext-PDO": "*",
        "jschreuder/middle": "^2.1",
        "jschreuder/middle-di": "^1.0",
        "laminas/laminas-diactoros": "^3.5",
        "laminas/laminas-httphandlerrunner": "^2.11",
        "monolog/monolog": "^3.8",
        "robmorgan/phinx": "^0.16",
        "symfony/routing": "^7.2",
        "symfony/console": "^7.2"
    },
    "require-dev": {
        "pestphp/pest": "^3.7",
        "mockery/mockery": "^1.6"
    }
}
